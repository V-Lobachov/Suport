    = text_area_tag 'reply'
    = submit_tag 'Reply'
  = link_to 'Complite ticket', ticket_status_path(@ticket,status: "Completed")
  = link_to 'Canсel ticket', ticket_status_path(@ticket,status: "Canсeled")
= link_to 'Edit', edit_ticket_path(@ticket)
