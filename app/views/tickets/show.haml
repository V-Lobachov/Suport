  %strong Name:
  = @ticket.name
%p
  %strong Email:
  = @ticket.email
%p
  %strong Issue:
  = @ticket.issue
%p
  %strong Body:
  = @ticket.body
%p
  %strong Reference:
  = @ticket.reference
%p
  %strong Status:
  = @ticket.status
